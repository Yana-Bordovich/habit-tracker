{
    "name": "habit-tracker-app",
    "version": "1.0.0",
    "description": "Full-stack habit tracker with gamification",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "vite",
        "dev:server": "cd server && node server.js",
        "build": "tsc && vite build",
        "preview": "vite preview"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "concurrently": "^8.2.2",
        "cors": "^2.8.5",
        "express": "^4.19.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "4.3.1",
        "typescript": "^5.2.2",
        "vite": "5.3.1"
    }
}